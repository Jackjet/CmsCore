
@{
    ViewBag.Title = "修改栏目";
}

<div class="row">

    <div class="col-md-3">

        @Html.Partial("Shared/_QuickMenu")

    </div>

    <div class="col-md-9 ">

        <ol class="breadcrumb">
            <li><a href="/Manage">管理后台</a></li>
            <li><a href="/Manage/Category">栏目管理</a></li>
            <li class="active">修改栏目</li>
        </ol>

        <div class="container">

            @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", style = "width: 280px" })
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">保存</button>
                        <a href="/manage/category" class="btn btn-default">取消</a>
                    </div>
                </div>
            }

        </div>

    </div>

</div>